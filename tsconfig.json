{
  "extends": "@tsconfig/node12/tsconfig.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "outDir": "build/",
    "sourceMap": true,
    "removeComments": true,
    "typeRoots": ["./@types", "./node_modules/@types"]
  },
  "include": [
    "./globals.d.ts",
    "./**/*.ts",
    "./**/*.js",
    "/**/*.json",
    "./.eslintrc.js",
    "./newrelic.js",
    "package.json"
  ],
  "exclude": ["./build", "./app.json", "./package-lock.json"]
}
